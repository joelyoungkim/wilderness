/* For desktop: */
@media only screen and (min-width: 760px) {
    .col-1 {width: 8.33%;}
    .col-2 {width: 16.66%;}
    .col-3 {width: 25%; }
    .col-4 {width: 33.33%;}
    .col-5 {width: 41.66%;}
    .col-6 {width: 50%;}
    .col-7 {width: 58.33%;}
    .col-8 {width: 66.66%; }
    .col-9 {width: 75%;}
    .col-10 {width: 83.33%; }
    .col-11 {width: 91.66%;}
    .col-12 {width: 100%;}
    
    .wrapper-1 {width: 8.33%;}
    .wrapper-2 {width: 16.66%;}
    .wrapper-3 {width: 25%; }
    .wrapper-4 {width: 33.33%;}
    .wrapper-5 {width: 41.66%;}
    .wrapper-6 {width: 50%;}
    .wrapper-7 {width: 58.33%;}
    .wrapper-8 {width: 66.66%;}
    .wrapper-9 {width: 75%;}
    .wrapper-10 {width: 83.33%; }
    .wrapper-11 {width: 91.66%;}
    .wrapper-12 {width: 100%;}
    
    .header {
    	height: 100px;
    }
}

.navclass{
	background-color: red;
	padding: 1px; /* To prevent that an unwanted block is created */
  min-width: 375px;
}

.textbody {
	position: relative;
  clear: both;
  background-color: gray;
  display: block;
  min-width: 375px;
}

.textbody:after {
  content: "";
  clear: both;
  display: block;
}

.footer {
  background-color: #E6E6F2;
  color: #373C40;
  clear: both;
  padding: 1px; /* To prevent that an unwanted block is created */
  min-width: 375px;
}

.container {
	position: absolute;
	left: 40%;
	background-color: blue;
}