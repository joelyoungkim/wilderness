 /* For mobile phones: */
[class*="col-"] {
    width: 100%;
    float: left;
}

[class*="wrapper-"] {
    width: 100%;
    float: left;
    background-color: white;
}

.header {
  background-color: #F2F2E6;
  height: 230px;
  min-width: 320px;
}

